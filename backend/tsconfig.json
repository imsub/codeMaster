{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "backend/dist",
    "listFiles": true,
    // "noImplicitHelpers": false,
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "diagnostics": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": false,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2024", "DOM"]
  },
  "files": ["src/server.ts", "src/app.ts"],
  // "include": [
  //   "src/**/*" // Include all files in the src folder and subfolders
  // ],
  "exclude": [
    "node_modules", // Already ignored by default
    "backend/dist", // Ignore the output directory
    "src/tests", // Ignore the tests folder
    "src/legacy", // Ignore the legacy folder
    "src/**/*.spec.ts", // Ignore all .spec.ts files (e.g., test files)
    "src/ignore-this-file.ts" // Ignore a specific file
  ]
}
